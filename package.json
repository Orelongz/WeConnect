{
  "name": "weconnect",
  "version": "1.0.0",
  "description": "Platform that connects businesses with individuals",
  "main": "app.js",
  "directories": {
    "test": "test"
  },
  "dependencies": {
    "bcrypt": "^1.0.3",
    "body-parser": "^1.18.2",
    "cors": "^2.8.4",
    "dotenv": "^5.0.1",
    "express": "^4.16.2",
    "pg": "^7.4.1",
    "pg-hstore": "^2.3.2",
    "sequelize": "^4.36.0",
    "swagger-ui-express": "^2.0.15",
    "validator": "^9.4.1"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-preset-env": "^1.6.1",
    "babel-preset-stage-2": "^6.24.1",
    "chai": "^4.1.2",
    "chai-http": "^3.0.0",
    "coveralls": "^3.0.0",
    "cross-env": "^5.1.4",
    "eslint": "^4.18.2",
    "eslint-config-airbnb": "^16.1.0",
    "eslint-config-airbnb-base": "^12.1.0",
    "eslint-plugin-import": "^2.9.0",
    "eslint-plugin-jsx-a11y": "^6.0.3",
    "eslint-plugin-react": "^7.7.0",
    "mocha": "^5.0.2",
    "nyc": "^11.4.1",
    "sequelize-cli": "^4.0.0"
  },
  "scripts": {
    "start": "babel-node ./server/bin/www",
    "lint": "eslint --fix server/ test/",
    "migrate": "sequelize db:migrate && sequelize db:migrate --env test",
    "undo-migrate": "sequelize db:migrate:undo && sequelize db:migrate:undo --env test",    
    "test": "cross-env NODE_ENV=test nyc --reporter=html --reporter=text mocha test/server/userTest.js test/server/businessTest.js test/server/indexTest.js --exit --compilers js:babel-register",
    "coverage": "nyc report --reporter=text-lcov | coveralls",
    "report-coverage": "cat ./coverage/lcov.info | coveralls",
    "check-coverage": "nyc check-coverage --lines 70 --per-file",
    "coveralls": "nyc --reporter=lcov --reporter=text-lcov npm test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Orelongz/WeConnect.git"
  },
  "keywords": [
    "connect",
    "business"
  ],
  "author": "Longe Pelumi",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/Orelongz/WeConnect/issues"
  },
  "homepage": "https://github.com/Orelongz/WeConnect#readme"
}
